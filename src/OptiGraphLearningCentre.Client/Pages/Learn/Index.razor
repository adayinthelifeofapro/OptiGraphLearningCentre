@page "/learn"
@inject ILearningService LearningService

<PageTitle>Learn - Optimizely Graph Learning Centre</PageTitle>

<div class="max-w-6xl mx-auto space-y-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Learning Modules</h1>
        <p class="text-gray-600 mt-1">
            Master Optimizely Graph through structured lessons and hands-on examples
        </p>
    </div>

    <!-- Progress Overview -->
    @if (_progress != null && _modules.Any())
    {
        <Card>
            <ChildContent>
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500">Your Progress</p>
                    <p class="text-2xl font-bold text-gray-900">
                        @_completedLessons / @_totalLessons lessons completed
                    </p>
                </div>
                <div class="w-48">
                    <div class="flex justify-between text-sm text-gray-600 mb-1">
                        <span>Progress</span>
                        <span>@_progressPercentage.ToString("F0")%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-opti-blue h-2 rounded-full transition-all duration-500"
                             style="width: @(_progressPercentage)%"></div>
                    </div>
                </div>
            </div>
            </ChildContent>
        </Card>
    }

    <!-- Modules Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        @foreach (var module in _modules)
        {
            <a href="@($"/learn/{module.Id}")" class="card hover:shadow-lg transition-all duration-200 group">
                <div class="card-body">
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-opti-blue/10 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:bg-opti-blue group-hover:text-white transition-colors">
                            <svg class="w-6 h-6 text-opti-blue group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                        </div>
                        <div class="flex-1">
                            <div class="flex items-center gap-2 mb-1">
                                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-opti-blue transition-colors">
                                    @module.Title
                                </h3>
                                <Badge Variant="@GetDifficultyBadge(module.Difficulty)">
                                    @module.Difficulty.ToString()
                                </Badge>
                            </div>
                            <p class="text-gray-600 text-sm mb-3">
                                @module.Description
                            </p>
                            <div class="flex items-center gap-4 text-sm text-gray-500">
                                <span class="flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                    </svg>
                                    @module.Lessons.Count lessons
                                </span>
                                <span class="flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    ~@module.EstimatedMinutes min
                                </span>
                            </div>

                            @{
                                var moduleCompletion = GetModuleCompletion(module);
                            }
                            @if (moduleCompletion > 0)
                            {
                                <div class="mt-3">
                                    <div class="w-full bg-gray-200 rounded-full h-1.5">
                                        <div class="bg-green-500 h-1.5 rounded-full transition-all duration-500"
                                             style="width: @moduleCompletion%"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>

@code {
    private List<LearningModule> _modules = new();
    private UserProgress? _progress;
    private int _completedLessons;
    private int _totalLessons;
    private double _progressPercentage;

    protected override async Task OnInitializedAsync()
    {
        _modules = await LearningService.GetModulesAsync();
        _progress = await LearningService.GetUserProgressAsync();

        _totalLessons = _modules.Sum(m => m.Lessons.Count);
        _completedLessons = _progress.CompletedLessons.Count(p => p.Value.IsCompleted);
        _progressPercentage = _totalLessons > 0 ? (double)_completedLessons / _totalLessons * 100 : 0;
    }

    private double GetModuleCompletion(LearningModule module)
    {
        if (_progress == null || module.Lessons.Count == 0)
            return 0;

        var completed = module.Lessons.Count(l =>
            _progress.CompletedLessons.TryGetValue(l.Id, out var p) && p.IsCompleted);

        return (double)completed / module.Lessons.Count * 100;
    }

    private BadgeVariant GetDifficultyBadge(ModuleDifficulty difficulty) => difficulty switch
    {
        ModuleDifficulty.Beginner => BadgeVariant.Success,
        ModuleDifficulty.Intermediate => BadgeVariant.Warning,
        ModuleDifficulty.Advanced => BadgeVariant.Danger,
        _ => BadgeVariant.Default
    };
}
