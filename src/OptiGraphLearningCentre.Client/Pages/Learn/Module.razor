@page "/learn/{ModuleId}"
@page "/learn/{ModuleId}/{LessonId}"
@inject ILearningService LearningService
@inject IGraphQLClient GraphQLClient
@inject NavigationManager Navigation

<PageTitle>@(_module?.Title ?? "Loading...") - Optimizely Graph Learning Centre</PageTitle>

@if (_isLoading)
{
    <div class="flex items-center justify-center min-h-[400px]">
        <LoadingSpinner Message="Loading module..." />
    </div>
}
else if (_module == null)
{
    <div class="text-center py-12">
        <h2 class="text-xl font-semibold text-gray-900">Module not found</h2>
        <p class="text-gray-600 mt-2">The requested module could not be found.</p>
        <a href="/learn" class="btn-primary mt-4 inline-block">Back to Modules</a>
    </div>
}
else
{
    <div class="max-w-6xl mx-auto">
        <!-- Breadcrumb -->
        <div class="flex items-center gap-2 text-sm text-gray-500 mb-4">
            <a href="/learn" class="hover:text-opti-blue">Learning Centre</a>
            <span>/</span>
            <span class="text-gray-900">@_module.Title</span>
            @if (_currentLesson != null)
            {
                <span>/</span>
                <span class="text-gray-900">@_currentLesson.Title</span>
            }
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
            <!-- Sidebar - Lessons List -->
            <aside class="lg:col-span-1">
                <Card Title="Lessons">
                    <ChildContent>
                    <nav class="space-y-1 -mx-2">
                        @foreach (var lesson in _module.Lessons.OrderBy(l => l.Order))
                        {
                            var isActive = lesson.Id == _currentLesson?.Id;
                            var isCompleted = _progress?.CompletedLessons.TryGetValue(lesson.Id, out var p) == true && p.IsCompleted;

                            <a href="@($"/learn/{_module.Id}/{lesson.Id}")"
                               class="@(isActive ? "bg-opti-blue text-white" : "text-gray-600 hover:bg-gray-100") flex items-center justify-between px-3 py-2 rounded-lg text-sm transition-colors">
                                <span class="flex items-start gap-2">
                                    @if (isCompleted)
                                    {
                                        <svg class="w-4 h-4 mt-0.5 flex-shrink-0 @(isActive ? "text-white" : "text-green-500")" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                        </svg>
                                    }
                                    else
                                    {
                                        <span class="w-4 h-4 mt-0.5 flex-shrink-0 rounded-full border-2 @(isActive ? "border-white" : "border-gray-300")"></span>
                                    }
                                    <span>@lesson.Title</span>
                                </span>
                            </a>
                        }
                    </nav>
                    </ChildContent>
                </Card>
            </aside>

            <!-- Main Content -->
            <main class="lg:col-span-3 space-y-6">
                @if (_currentLesson != null)
                {
                    <!-- Lesson Header -->
                    <Card>
                        <ChildContent>
                        <h1 class="text-2xl font-bold text-gray-900 mb-2">@_currentLesson.Title</h1>
                        <p class="text-gray-600">@_currentLesson.Summary</p>

                        @if (_currentLesson.LearningObjectives.Any())
                        {
                            <div class="mt-4 p-4 bg-blue-50 rounded-lg border border-blue-100">
                                <h3 class="text-sm font-semibold text-blue-800 mb-2">Learning Objectives</h3>
                                <ul class="space-y-1">
                                    @foreach (var objective in _currentLesson.LearningObjectives)
                                    {
                                        <li class="flex items-start gap-2 text-sm text-blue-700">
                                            <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            @objective
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                        </ChildContent>
                    </Card>

                    <!-- Lesson Content -->
                    <Card>
                        <ChildContent>
                        <div class="prose max-w-none">
                            @((MarkupString)_currentLesson.Content)
                        </div>
                        </ChildContent>
                    </Card>

                    <!-- Examples -->
                    @foreach (var example in _currentLesson.Examples)
                    {
                        <Card Title="@example.Title">
                            <ChildContent>
                            <p class="text-gray-600 mb-4">@example.Description</p>
                            <TryItPanel Example="@example" />
                            </ChildContent>
                        </Card>
                    }

                    <!-- Navigation -->
                    <div class="flex items-center justify-between pt-4">
                        @if (!string.IsNullOrEmpty(_currentLesson.PreviousLessonId))
                        {
                            <a href="@($"/learn/{_module.Id}/{_currentLesson.PreviousLessonId}")"
                               class="btn-secondary flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                                </svg>
                                Previous
                            </a>
                        }
                        else
                        {
                            <div></div>
                        }

                        <div class="flex gap-2">
                            <button class="btn-success flex items-center gap-2" @onclick="MarkComplete">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                Mark Complete
                            </button>

                            @if (!string.IsNullOrEmpty(_currentLesson.NextLessonId))
                            {
                                <a href="@($"/learn/{_module.Id}/{_currentLesson.NextLessonId}")"
                                   class="btn-primary flex items-center gap-2">
                                    Next
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                </a>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <!-- Module Overview -->
                    <Card>
                        <ChildContent>
                        <h1 class="text-2xl font-bold text-gray-900 mb-2">@_module.Title</h1>
                        <p class="text-gray-600 mb-4">@_module.Description</p>

                        <div class="flex items-center gap-4">
                            <Badge Variant="@GetDifficultyBadge(_module.Difficulty)">
                                @_module.Difficulty.ToString()
                            </Badge>
                            <span class="text-sm text-gray-500">
                                @_module.Lessons.Count lessons
                            </span>
                            <span class="text-sm text-gray-500">
                                ~@_module.EstimatedMinutes min
                            </span>
                        </div>
                        </ChildContent>
                    </Card>

                    @if (_module.Lessons.Any())
                    {
                        <a href="@($"/learn/{_module.Id}/{_module.Lessons.First().Id}")"
                           class="btn-primary inline-flex items-center gap-2">
                            Start Learning
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                            </svg>
                        </a>
                    }
                }
            </main>
        </div>
    </div>
}

@code {
    [Parameter]
    public string? ModuleId { get; set; }

    [Parameter]
    public string? LessonId { get; set; }

    private LearningModule? _module;
    private Lesson? _currentLesson;
    private UserProgress? _progress;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _isLoading = true;

        if (!string.IsNullOrEmpty(ModuleId))
        {
            _module = await LearningService.GetModuleAsync(ModuleId);
            _progress = await LearningService.GetUserProgressAsync();

            if (!string.IsNullOrEmpty(LessonId))
            {
                _currentLesson = _module?.Lessons.FirstOrDefault(l => l.Id == LessonId);
            }
            else
            {
                _currentLesson = null;
            }
        }

        _isLoading = false;
    }

    private async Task MarkComplete()
    {
        if (_currentLesson != null)
        {
            await LearningService.MarkLessonCompleteAsync(_currentLesson.Id);
            _progress = await LearningService.GetUserProgressAsync();
            StateHasChanged();
        }
    }

    private BadgeVariant GetDifficultyBadge(ModuleDifficulty difficulty) => difficulty switch
    {
        ModuleDifficulty.Beginner => BadgeVariant.Success,
        ModuleDifficulty.Intermediate => BadgeVariant.Warning,
        ModuleDifficulty.Advanced => BadgeVariant.Danger,
        _ => BadgeVariant.Default
    };
}
