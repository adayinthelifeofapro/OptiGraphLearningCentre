@inject NavigationManager Navigation
@inject ILearningService LearningService
@inject ICourseContext CourseContext
@implements IDisposable

<nav class="p-4 space-y-6">
    @if (CourseContext.CurrentCourse is { } course)
    {
        <!-- Back to All Courses -->
        <div class="pb-4 border-b border-gray-200 dark:border-gray-700">
            <a href="/" class="text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 flex items-center gap-2 mb-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                All Courses
            </a>
            <h2 class="font-bold text-gray-900 dark:text-gray-100">@course.Name</h2>
        </div>

        <!-- Course Navigation from NavItems -->
        @foreach (var category in course.NavItems.GroupBy(n => n.Category).OrderBy(g => g.Key))
        {
            <div>
                <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3 px-3">@category.Key</h3>
                <div class="space-y-1">
                    @foreach (var navItem in category.OrderBy(n => n.Order))
                    {
                        var href = navItem.Route == ""
                            ? $"/courses/{course.Id}"
                            : $"/courses/{course.Id}/{navItem.Route}";

                        <NavLink href="@href"
                                 class="@NavLinkClass"
                                 ActiveClass="@GetActiveClass(course.BrandColor)"
                                 Match="@(navItem.Route == "" || navItem.Route == "learn" ? NavLinkMatch.All : NavLinkMatch.Prefix)">
                            @GetNavIcon(navItem.Icon)
                            <span>@navItem.Title</span>
                        </NavLink>
                    }

                    @if (category.Key == "Main" && category.Any(n => n.Route == "learn"))
                    {
                        <!-- Learning Modules under Learn -->
                        @foreach (var module in _modules)
                        {
                            <NavLink href="@($"/courses/{course.Id}/learn/{module.Id}")" class="@NavLinkClass" ActiveClass="@GetActiveClass(course.BrandColor)">
                                @GetModuleIcon(module.Icon)
                                <span class="truncate">@module.Title</span>
                            </NavLink>
                        }
                    }
                </div>
            </div>
        }

        <!-- External Links -->
        @if (course.ExternalLinks.Any())
        {
            <div>
                <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3 px-3">Resources</h3>
                <div class="space-y-1">
                    @foreach (var link in course.ExternalLinks)
                    {
                        <a href="@link.Url" target="_blank" class="@NavLinkClass flex items-center gap-3">
                            @GetNavIcon(link.Icon)
                            <span>@link.Title</span>
                            <svg class="w-3 h-3 ml-auto opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                            </svg>
                        </a>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <!-- Catalog View - No course selected -->
        <div>
            <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3 px-3">Navigation</h3>
            <div class="space-y-1">
                <NavLink href="" class="@NavLinkClass" ActiveClass="@ActiveClass" Match="NavLinkMatch.All">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                    <span>Course Catalog</span>
                </NavLink>
            </div>
        </div>
    }
</nav>

@code {
    private const string NavLinkClass = "nav-link flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 rounded-lg transition-colors duration-200 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-gray-100";
    private const string ActiveClass = "nav-link-active bg-opti-blue dark:bg-blue-600 text-white hover:bg-opti-blue dark:hover:bg-blue-600 hover:text-white";

    private List<LearningModule> _modules = new();

    protected override void OnInitialized()
    {
        CourseContext.OnCourseChanged += HandleCourseChanged;
    }

    private async void HandleCourseChanged(CourseDefinition? course)
    {
        if (course != null)
        {
            _modules = await LearningService.GetModulesAsync();
        }
        else
        {
            _modules = new();
        }
        await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnParametersSetAsync()
    {
        if (CourseContext.CurrentCourse != null)
        {
            _modules = await LearningService.GetModulesAsync();
        }
    }

    public void Dispose()
    {
        CourseContext.OnCourseChanged -= HandleCourseChanged;
    }

    private string GetActiveClass(string brandColor)
    {
        // For dynamic brand color, we'll use inline style in the NavLink
        return $"nav-link-active text-white hover:text-white";
    }

